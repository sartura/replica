-*sys-apps/kmod
-*sys-devel/binutils
-*sys-devel/gcc
-*sys-devel/make
-*sys-fs/e2fsprogs
-*sys-process/psmisc
-*virtual/dev-manager
-*virtual/man
-*virtual/modutils
-*virtual/os-headers
-*virtual/package-manager
-*virtual/service-manager
-*virtual/ssh

# Remove Busybox from the default installation
-*sys-apps/busybox

